<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="default_judul">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">58dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="default_judul_nopadding">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">58dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="default_judul_nobold">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">58dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="default_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style untuk TextInputLayout (Search & Spinner) -->
    <style name="DefaultTextInputLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint"> </item>
    </style>

    <style name="DefaultTextInputLayout1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/g_b_outline</item>
        <item name="android:hint"> </item>
    </style>

    <!-- Style untuk TextInputEditText -->
    <style name="DefaultTextInputEditText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/g_b_outline</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style untuk Garis Pemisah -->
    <style name="DefaultDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/grey_1</item>
    </style>

</resources>